{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "ApplicationInsights": {
            "LogLevel": {
                "Default": "Information"
            }
        }
    },
    "ConnectionStrings": {
        "MyWeb": "Server=localhost;Database=MyWeb;User Id=sa;Password=yourStrong(!)Password;MultipleActiveResultSets=true; App=MyWebApi; TrustServerCertificate=True"
